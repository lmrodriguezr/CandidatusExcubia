<h1>Publications</h1>
<% if current_contributor? %>
  <%= link_to new_publication_path do %>
    <%= icon 'fas', 'plus-circle' %> Add publications
  <% end %>
<% end %>
<hr/>

<%= pager @publications %>
<div class='card-columns card-columns-wide'>
  <% @publications.each do |publication| %>
    <%= render publication %>
  <% end %>
</div>
<%= pager @publications %>

