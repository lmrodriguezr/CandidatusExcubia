<h1><%= @name.name_html %></h1>
<h3>&raquo; Edit Notes</h3>
<hr/>

<%= simple_form_for(@name) do |f| %>
  <%= f.input :name, required: true %>
  <%= f.input :notes, as: :rich_text_area %>

  <br/>
  <%= f.button :submit, 'Submit' %>
  <%= link_to('Cancel', @name, class: 'btn btn-secondary') %>
  <br/><br/>
<% end %>

