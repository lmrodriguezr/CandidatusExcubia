
<%= simple_form_for(@register) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :accession %>
    <%= f.association :user %>
    <%= f.input :validated_by %>
    <%= f.input :submitted %>
    <%= f.input :validated %>
    <%= f.association :publication %>
    <%= f.input :publication_pdf %>
    <%= f.input :supplementary_pdf %>
    <%= f.input :record_pdf %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
